<div class="lg:pt-0 lg:pl-6 xl:pl-20 p-10 pl-20 text-white text-base leading-10">
  <% @options[:headers].each do |header| %>
    <% next if header.options[:visible] == false %> <!-- # TODO: abstract to torture-cms -->

    <div class="flex flex-col pt-10">
      <%= link_to header.title, header.options[:target], class: "font-bold pl-3 #{header.items.any? ? 'bg-selected' : ''}" %>
      <% header.items.each do |h2| %>
        <%= link_to h2.title, "##{h2.id}", class: "pl-3" %>
      <% end %>
    </div>
  <% end %>
</div>
